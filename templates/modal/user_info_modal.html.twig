<div id="modalPersonal" class="modal">
    <div class="modal_dialog">
        <div id="modalPersonalInfo" class="modal_content">
            <button id="closePersonal" class="modal_close"></button>
            <h1 class="modal_title">{{ username }}</h1>
            <h1 class="modal_title">User information</h1>
            {% if existingUserInfo != null %}
                <div id="personalInfo" class="userInfoHide">
                    <div class="profile_container">
                        <div class="left">
                            <img src="{{ asset('uploads/photos/' ~ existingUserInfo.photo) }}" class="base_photo"/>
                        </div>
                        <div class="clear"></div>
                        <div class="right">
                            <div class="input_form">
                                <h3 id="firstName" class="message">First name: {{ existingUserInfo.firstName }}</h3>
                            </div>
                            <div class="input_form">
                                <h3 id="secondName" class="message">Last name: {{ existingUserInfo.lastName }}</h3>
                            </div>
                            <div class="input_form">
                                <h3 id="middleName" class="message">Middle name: {{ existingUserInfo.middleName }}</h3>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
            <div id="personalForm" class="userInfoHide">
                <div class="create_task_container">
                    {{ form_start(userInfo) }}
                    <div class="input_form">
                        <h3 class="create_task_title">First name</h3>
                        {{ form_row(userInfo.firstName) }}
                    </div>
                    <div class="input_form">
                        <h3 class="create_task_title">Last name</h3>
                        {{ form_row(userInfo.lastName) }}
                    </div>
                    <div class="input_form">
                        <h3 class="create_task_title">Middle name</h3>
                        {{ form_row(userInfo.middleName) }}
                    </div>
                    <div class="select_parent_block">
                        <h3 class="create_task_title">Photo (JPG, JPEG, PNG)</h3>
                        {{ form_row(userInfo.photo) }}
                    </div>
                    <div class="sign_button button_sign_up">
                        <button id="saveUserInfoButton" class="style_button" type="submit">Save</button>
                    </div>
                    {{ form_end(userInfo) }}
                </div>
            </div>
        </div>
    </div>
</div>